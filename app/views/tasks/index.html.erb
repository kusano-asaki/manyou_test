<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<%= form_with(method: :get,url: tasks_path, local: true) do |form| %>
  <%= form.label :name_serch, "NAME検索" %>
  <%= form.text_field :name %>
  <%= form.label :completed_serch, "進捗検索" %>
  <%= form.select :completed, [[],['未着手',0],['着手中',1],['完了',2]] %><br>
  <%= form.hidden_field :search, value: 'true' %>

  <%= form.submit "絞り込み検索" %>
<% end %>

<%= link_to "終了期限でソートする", tasks_path(sort_expired: "true") %>
<%= link_to "優先順位でソートする", tasks_path(sort_priority: "true") %>
<%= link_to "ソートリセット", tasks_path %>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Content</th>
      <th>End_at</th>
      <th>Completed</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.end_at %></td>
        <td><%= task.completed %></td>
        <td><%= task.priority %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
