<ul class="list-group">
  <li class="list-group-item">
    <strong>User_Name:</strong>
    <%= @user.name %>
  </li>

    <li class="list-group-item">
    <strong>Email:</strong>
    <%= @user.email %>
  </li>
  <li class="list-group-item">
    <strong>Admin:</strong>
    <%= @user.admin %>
  </li>
  <table class="user_info">
    <thead>
      <tr>
        <h4>< Task_index ></h4>
        <th>Name</th>
        <th>Content</th>
        <th>Create_at</th>
        <th>End_at</th>
        <th>Completed</th>
        <th>Priority</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @user.tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.content %></td>
        <td><%= task.created_at.in_time_zone('Tokyo').strftime("%Y/%m/%d %H:%M:%S") %></td>
        <td><%= task.end_at %></td>
        <td><%= task.completed %></td>
        <td><%= task.priority %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Back', admin_users_path %>
