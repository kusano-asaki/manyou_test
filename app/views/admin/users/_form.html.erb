<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %></h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [:admin, @user], local: true) do |form| %>
    <div class="field">
    <%= form.label :name, class: "field_text" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :email, class: "field_text" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :admin, class: "field_text" %>
    <%= form.check_box :admin %>
  </div>
  <div class="field">
    <%= form.label :password, class: "field_text" %>
    <%= form.password_field :password %>
  </div>
  <div class="field">
    <%= form.label :password_confirmation, class: "field_text" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
