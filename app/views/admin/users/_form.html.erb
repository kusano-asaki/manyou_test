<%= form_with(model: [:admin, @user], local: true) do |form| %>
    <div class="field">
    <%= form.label :name, class: "field_text" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :email, class: "field_text" %>
    <%= form.email_field :email, class: "form-control" %>
  </div>
  <div class="field">
    <%= form.label :password, class: "field_text" %>
    <%= form.password_field :password %>
  </div>
  <div class="field">
    <%= form.label :password_confirmation, class: "field_text" %>
    <%= form.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
